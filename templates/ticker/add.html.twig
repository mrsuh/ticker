{% extends 'base.html.twig' %}
{% block body %}

    <div class="container">
        <h3>Add ticker</h3>

        <div class="row">
            <div class="col-12">
                {{ form_start(form, {'attr': {'class': 'form-group'} }) }}

                <div>
                    {{ form_label(form.name, 'Name') }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control' ~ (form.name.vars.errors|length ? ' form-error ' : ''), 'placeholder': 'My ticker' }}) }}
                    {{ form_errors(form.name) }}
                </div>
                <div>
                    {{ form_label(form.project, 'Project') }}
                    {{ form_widget(form.project, {'attr': {'class': 'form-control' ~ (form.project.vars.errors|length ? ' form-error ' : ''),  }}) }}
                    {{ form_errors(form.project ) }}
                </div>

                <br/>

                <div>
                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary' }, 'label': 'Save'}) }}
                    <a href="{{ path('ticker.list') }}" type="button" class="btn btn-warning">Cancel</a>
                </div>
                {{ form_end(form) }}
            </div>

        </div>
    </div>

{% endblock %}