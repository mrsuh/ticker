{% macro category_class(category) %}
    {% spaceless %}
        {% if category == constant('App\\Entity\\Category::WORK') %}
            primary
        {% elseif category == constant('App\\Entity\\Category::REST') %}
            success
        {% elseif category == constant('App\\Entity\\Category::HOBBY') %}
            info
        {% elseif category == constant('App\\Entity\\Category::OTHER') %}
            secondary
        {% endif %}
    {% endspaceless %}
{% endmacro %}

{% macro category_name(category) %}
    {% spaceless %}
        {% if category == constant('App\\Entity\\Category::WORK') %}
            Работа
        {% elseif category == constant('App\\Entity\\Category::REST') %}
            Отдых
        {% elseif category == constant('App\\Entity\\Category::HOBBY') %}
            Хобби
        {% elseif category == constant('App\\Entity\\Category::OTHER') %}
            Другое
        {% endif %}
    {% endspaceless %}
{% endmacro %}